{
    "name": "marshmallow/nova-advanced-image",
    "description": "An advanced image field for Nova with crop and resize.",
    "keywords": [
        "laravel",
        "nova",
        "image",
        "crop",
        "resize",
        "image crop",
        "image resize",
        "advanced",
        "advanced image",
        "advanced image field"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "intervention/image": "^3.6",
        "laravel/nova": "^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "Marshmallow\\AdvancedImage\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Marshmallow\\AdvancedImage\\FieldServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
